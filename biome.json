{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true,
        "noBannedTypes": "off"
      },
      "correctness": {
        "recommended": true,
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "performance": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "off",
        "noParameterProperties": "off",
        "useNodejsImportProtocol": "off",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "filenameCases": ["camelCase", "kebab-case", "PascalCase"]
          }
        },
        "useNamingConvention": {
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "coverage",
      ".nuxt",
      ".output",
      "*.min.js",
      "bun.lockb",
      ".astro",
      "test-results/**"
    ]
  },

  "overrides": [
    {
      "include": ["**/*.astro"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
