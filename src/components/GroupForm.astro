    transition: border-color 0.2s;
  }

  input[type="text"]:focus {
    outline: none;
    border-color: #007bff;
  }

  .members-selection {
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    padding: 0.5rem;
  }

  .member-checkbox {
    display: flex;
