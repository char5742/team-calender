<script>
  // ã‚¤ãƒ™ãƒ³ãƒˆå§”è­²ã‚’ä½¿ç”¨ã—ã¦ç·¨é›†ãƒ»å‰Šé™¤ãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆãƒãƒ³ãƒ‰ãƒªãƒ³ã‚°
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    
    // ç·¨é›†ãƒœã‚¿ãƒ³ã®ã‚¯ãƒªãƒƒã‚¯å‡¦ç†
    const editBtn = target.closest('.edit-btn');
    if (editBtn) {
      e.stopPropagation();
      const groupId = editBtn.getAttribute('data-group-id');
      console.log('Edit button clicked, groupId:', groupId);
      if (groupId) {
        window.dispatchEvent(new CustomEvent('group-edit', { 
          detail: { groupId } 
        }));
      }
    }
    
    // å‰Šé™¤ãƒœã‚¿ãƒ³ã®ã‚¯ãƒªãƒƒã‚¯å‡¦ç†
    const deleteBtn = target.closest('.delete-btn');
    if (deleteBtn) {
      e.stopPropagation();
      const groupId = deleteBtn.getAttribute('data-group-id');
      console.log('Delete button clicked, groupId:', groupId);
      if (groupId) {
        window.dispatchEvent(new CustomEvent('group-delete', { 
          detail: { groupId } 
        }));
      }
    }
  });
  
  // ã‚¿ãƒƒãƒãƒ‡ãƒã‚¤ã‚¹ã§ã®ã‚¹ãƒ¯ã‚¤ãƒ—ã‚¸ã‚§ã‚¹ãƒãƒ£ãƒ¼å¯¾å¿œ
  const groupItems = document.querySelectorAll('.group-item');
  
  groupItems.forEach((item) => {
    let startX = 0;
    let currentX = 0;
    let diff = 0;
    let isSwipe = false;
    
    const actions = item.querySelector('.group-actions') as HTMLElement;
    if (!actions) return;
    
    item.addEventListener('touchstart', (e) => {
      const touchEvent = e as TouchEvent;
      startX = touchEvent.touches[0].clientX;
      isSwipe = false;
    });
    
    item.addEventListener('touchmove', (e) => {
      const touchEvent = e as TouchEvent;
      currentX = touchEvent.touches[0].clientX;
      diff = startX - currentX;
      
      // å·¦ã‚¹ãƒ¯ã‚¤ãƒ—ã§ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã‚’è¡¨ç¤º
      if (diff > 50 && !isSwipe) {
        isSwipe = true;
        item.classList.add('show-actions');
      }
      // å³ã‚¹ãƒ¯ã‚¤ãƒ—ã§ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã‚’éš ã™
      else if (diff < -50 && isSwipe) {
        isSwipe = false;
        item.classList.remove('show-actions');
      }
    });
    
    item.addEventListener('touchend', () => {
      // ã‚¹ãƒ¯ã‚¤ãƒ—ãŒä¸å®Œå…¨ãªå ´åˆã¯å…ƒã«æˆ»ã™
      if (Math.abs(diff) < 50) {
        item.classList.remove('show-actions');
      }
      diff = 0;
    });
  });
  
  // ä»–ã®ã‚¢ã‚¤ãƒ†ãƒ ã‚’ã‚¿ãƒƒãƒ—ã—ãŸæ™‚ã«ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã‚’é–‰ã˜ã‚‹
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    const clickedItem = target.closest('.group-item');
    
    groupItems.forEach((item) => {
      if (item !== clickedItem) {
        item.classList.remove('show-actions');
      }
    });
  });
</script>

