    }
  }
</style>

<script>
  // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ™‚ã®ãƒ˜ãƒƒãƒ€ãƒ¼ç¸®å°
  const header = document.getElementById('main-header');

  function updateHeaderOnScroll() {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  }

  window.addEventListener('scroll', updateHeaderOnScroll, { passive: true });

  // ãƒ¢ãƒã‚¤ãƒ«ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã®é–‹é–‰
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileNav = document.getElementById('mobile-nav');

  mobileMenuToggle?.addEventListener('click', () => {
    const isOpen = mobileNav?.classList.contains('open');
    
    if (isOpen) {
      mobileNav?.classList.remove('open');
      mobileMenuToggle.setAttribute('aria-expanded', 'false');
      mobileMenuToggle.setAttribute('aria-label', 'ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚’é–‹ã');
    } else {
      mobileNav?.classList.add('open');
      mobileMenuToggle.setAttribute('aria-expanded', 'true');
      mobileMenuToggle.setAttribute('aria-label', 'ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚’é–‰ã˜ã‚‹');
    }
  });

  // ãƒ†ãƒ¼ãƒžãƒˆã‚°ãƒ«
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    (window as any).themeManager?.toggle();
  });

  // ãƒšãƒ¼ã‚¸é·ç§»æ™‚ã«ãƒ¢ãƒã‚¤ãƒ«ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚’é–‰ã˜ã‚‹
  document.addEventListener('astro:page-load', () => {
    if (mobileNav) {
      mobileNav.classList.remove('open');
    }
    mobileMenuToggle?.setAttribute('aria-expanded', 'false');
  });
</script> 