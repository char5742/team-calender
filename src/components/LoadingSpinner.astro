---
export interface Props {
  isLoading?: boolean
  fullScreen?: boolean
  message?: string
}

const { isLoading = false, fullScreen = false, message = '読み込み中...' } = Astro.props
---

{isLoading && (
  <div class={`loading-container ${fullScreen ? 'full-screen' : ''}`}>
    <div class="loading-content">
      <div class="spinner-minimal"></div>
      <p class="loading-message visual-secondary">{message}</p>
    </div>
  </div>
)}

<style>
  .loading-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8);
  }

  .loading-container.full-screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(var(--blur-sm));
    -webkit-backdrop-filter: blur(var(--blur-sm));
    z-index: var(--z-index-modal);
  }

  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-4);
  }

  /* Minimal spinner */
  .spinner-minimal {
    width: 40px;
    height: 40px;
    border: 3px solid var(--color-gray-200);
    border-top-color: var(--color-primary-500);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .loading-message {
    margin: 0;
    font-size: var(--font-size-sm);
    text-align: center;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .loading-container.full-screen {
      background: rgba(0, 0, 0, 0.9);
    }

    .spinner-minimal {
      border-color: var(--color-gray-700);
      border-top-color: var(--color-primary-400);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .spinner-minimal {
      animation: none;
      border-top-color: transparent;
      background: conic-gradient(
        from 0deg,
        var(--color-primary-500) 0deg,
        var(--color-gray-200) 90deg
      );
    }
  }
</style> 