---
import { loadMockData } from '../lib/mockData'
import { groupsStore } from '../stores/groupStore'

// モックデータを読み込む
loadMockData()

// グループ一覧を取得
const groups = groupsStore.get()

// グループがない場合は作成画面へリダイレクト
if (groups.length === 0) {
  return Astro.redirect('/groups/new')
}

// 最初のグループのカレンダー画面へリダイレクト
return Astro.redirect(`/groups/${groups[0].id}/weekly-schedule`)
